/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-icore.dtsi"

/ {
	model = "Engicam i.CoreM6 DualLite/Solo Capacitive open frame";
	compatible = "fsl,imx6-icore", "fsl,imx6dl";

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;
		
		GPIO_EIM_DA7 {
			gpio-export,name = "GPIO_EIM_DA7";
			gpio-export,input = <1>;
			gpios = <&gpio3 7 0>;
		};				
	};

	codec: codec {
		status = "disabled";
	};
};

&ldb {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <18>;
		status = "okay";
		crtc = "ipu1-di0";
		primary;

		display-timings {
                        native-mode = <&timing1>;
                        timing1: hsd100pxn1 {
                                clock-frequency = <60000000>;
                                hactive = <1024>;
                                vactive = <600>;
                                hback-porch = <353>;
                                hfront-porch = <47>;
                                vback-porch = <39>;
                                vfront-porch = <4>;
                                hsync-len = <8>;
                                vsync-len = <2>;
                        };
                };
	};
};

&mxcfb1 {
	interface_pix_fmt = "RGB666";
	default_bpp = <16>;
	mode_str ="Amp-WD";
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&can2 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&usbotg {
	status = "okay";
};

&usdhc1 {
	cd-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&i2c3 {
	stmpe811@44 {
		compatible = "st,stmpe811";
		#address-cells = <1>;
		#size-cells = <0>;
		#interrupt-cells = <2>;
		reg = <0x44>;
		pinctrl-names = "default";		
		pinctrl-0 = <&pinctrl_stmpe_ts>;		
		interrupts = <30 2>;
		interrupt-parent = <&gpio5>;

		stmpe_touchscreen {
			compatible = "st,stmpe-ts";
			st,sample-time = <4>;
			st,mod-12b = <1>;
			st,ref-sel = <0>;
			st,adc-freq = <1>;
			st,ave-ctrl = <1>;
			st,touch-det-delay = <2>;
			st,settling = <2>;
			st,fraction-z = <7>;
			st,i-drive = <1>;
		};
	};
	
	pcf8563: rtc@51 {
		compatible = "pcf8563";
		reg = <0x51>;
	};
};

&iomuxc {
	touchpanel{
		pinctrl_stmpe_ts:  stmpe-tsgrp  {
			fsl,pins = <
				MX6QDL_PAD_CSI0_DAT12__GPIO5_IO30 0x1b0b0 /*interrupt*/ 
			>;
		};
	};
};

&iomuxc {
	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA7__GPIO3_IO07 0x1f059 /* EIM_DA07 forced to GPIO in */
				MX6QDL_PAD_GPIO_1__GPIO1_IO01  0x1f059 /*CD SD CARD*/
			>;
		};
	};
};
