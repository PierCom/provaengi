/dts-v1/;

#include "imx6dl.dtsi"
#include "imx6qdl-icore.dtsi"

/ {
	model = "Engicam i.CoreM6 DualLite/Solo Resistive open frame";
	compatible = "fsl,imx6-icore", "fsl,imx6dl";

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;
		GPIO_DL2 {
		        gpio-export,name = "GPIO_DL2";
			gpio-export,output = <1>;
                        gpio-export,direction_may_change;
		        gpios = <&gpio1 3 0>;
		};
		
		GPIO_EIM_DA7 {
			gpio-export,name = "GPIO_EIM_DA7";
			gpio-export,input = <1>;
			gpios = <&gpio3 7 0>;
		};				
	};

	codec: codec {
		status = "disabled";
	};
};

&ldb {
	ipu_id = <0>;
	sec_ipu_id = <0>;
};

&mxcfb1 {
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&can2 {
	status = "okay"; 
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&usdhc1 {
	cd-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
	status = "okay";
};


&i2c1 {
	max11801@48 {
		compatible = "maxim,max11801";
		reg = <0x48>;
		interrupt-parent = <&gpio3>;
		interrupts = <31 2>;
		work-mode = <0>;/*DCM mode*/		
		pinctrl-names = "default";		
		pinctrl-0 = <&pinctrl_max11801>;
	};
};

&iomuxc {
	touchpanel{
	  pinctrl_max11801:max11801 {
			fsl,pins = <
			    MX6QDL_PAD_EIM_D31__GPIO3_IO31 0x80000000 /* int for max11801 */
			>;	    
	  };
	};
	
	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6QDL_PAD_GPIO_3__GPIO1_IO03  0x1f059 /* LED DL2*/
				MX6QDL_PAD_EIM_DA7__GPIO3_IO07 0x1f059 /* EIM_DA07 forced to GPIO in */
				MX6QDL_PAD_GPIO_1__GPIO1_IO01  0x1f059 /*CD SD CARD*/
			>;
		};
	};
};
