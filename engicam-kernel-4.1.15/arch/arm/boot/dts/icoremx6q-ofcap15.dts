/dts-v1/;

#include "imx6q.dtsi"
#include "imx6qdl-icore.dtsi"

/ {
	model = "Engicam i.CoreM6 DualLite/Solo Capacitive open frame";
	compatible = "fsl,imx6-icore", "fsl,imx6q";

	gpio_export {
		compatible = "gpio-export";
		#size-cells = <0>;
		
		GPIO_EIM_DA7 {
			gpio-export,name = "GPIO_EIM_DA7";
			gpio-export,input = <1>;
			gpios = <&gpio3 7 0>;
		};				
	};
};

&ldb {
	status = "okay";

	lvds-channel@0 {
		fsl,data-mapping = "spwg";
		fsl,data-width = <24>;
		status = "okay";
		crtc = "ipu1-di0";
		primary;

		display-timings {
                        native-mode = <&timing1>;
                        timing1: hsd100pxn1 {
                                clock-frequency = <76000000>;
                                hactive = <1360>;
                                vactive = <768>;
                                hback-porch = <40>;
                                hfront-porch = <40>;
                                vback-porch = <5>;
                                vfront-porch = <5>;
                                hsync-len = <5>;
                                vsync-len = <5>;
                        };
                };
	};
};

&mxcfb1 {
	interface_pix_fmt = "RGB24";
	default_bpp = <32>;
	mode_str ="Amp-WD";
	status = "okay";
};

&mxcfb2 {
	status = "okay";
};

&can2 {
	status = "okay";
};

&uart2 {
	status = "okay";
};

&uart3 {
	status = "okay";
};

&uart4 {
	status = "okay";
};

&usbotg {
	status = "okay";
};

&usdhc1 {
	cd-gpios = <&gpio1 1 GPIO_ACTIVE_LOW>;
	status = "okay";
};

&i2c3 {
	codec: sgtl5000@0a {
		compatible = "fsl,sgtl5000";
		reg = <0x0a>;
		clocks = <&clks 201>;
		VDDA-supply = <&reg_2p5v>;
		VDDIO-supply = <&reg_3p3v>;
		VDDD-supply = <&reg_1p8v>;
	};
	
	pcf8563: rtc@51 {
		compatible = "pcf8563";
		reg = <0x51>;
	};
};

&iomuxc {
	hog {
		pinctrl_hog: hoggrp {
			fsl,pins = <
				MX6QDL_PAD_EIM_DA7__GPIO3_IO07 0x1f059 /* EIM_DA07 forced to GPIO in */
				MX6QDL_PAD_GPIO_1__GPIO1_IO01  0x1f059 /*CD SD CARD*/
			>;
		};
	};
};
